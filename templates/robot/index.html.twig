{% extends 'base.html.twig' %}

{% block title %}{{ 'title.robot.index'|trans }}{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-5">{{ 'title.robot.index'|trans }}</h1>
    <a class="btn btn-primary mb-3" href="{{ path('robot_create') }}">{{ 'form.robot.button.add'|trans }}</a>
    <form method="POST" action="{{ path('robot_combat') }}">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'entity.robot.property.id'|trans }}</th>
                    <th>{{ 'entity.robot.property.name'|trans }}</th>
                    <th>{{ 'entity.robot.property.type'|trans }}</th>
                    <th>{{ 'entity.robot.property.power'|trans }}</th>
                    <th>{{ 'entity.robot.header.options'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.type }}</td>
                        <td>{{ entity.power }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('robot_edit', {id: entity.id}) }}">{{ 'form.robot.button.edit'|trans }}</a>
                            <a class="btn btn-danger" href="{{ path('robot_delete', {id: entity.id}) }}">{{ 'form.robot.button.delete'|trans }}</a>
                            <input type="checkbox" class="btn-check" name="id[]" id="robot_id_{{ entity.id }}" value="{{ entity.id }}" />
                            <label class="btn btn-outline-primary" for="robot_id_{{ entity.id }}">{{ 'form.robot.button.select_for_combat'|trans }}</label>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <input class="btn btn-primary" type="submit" value="{{ 'form.robot.button.send_to_combat'|trans }}" />
    </form>
{% endblock %}
